-------------------------------- Code pour la carte  Arduino Nano avec Bluetooth (Sur le gant)------------------------------------------------------------

#include<Wire.h>
const int Flex = 0;
const int MPU=0x68; 
int16_t AcX,AcY,AcZ,Tmp,GyX,GyY,GyZ;

void setup() {
  
  Serial.begin(38400);
  Wire.begin();
  Wire.beginTransmission(MPU);
  Wire.write(0x6B); 
  Wire.write(0);    
  Wire.endTransmission(true);
 }

void loop() {
  Wire.beginTransmission(MPU);
  Wire.write(0x3B);  
  Wire.endTransmission(false);
  Wire.requestFrom(MPU,12,true);  
  AcX=Wire.read()<<8|Wire.read();    
  AcY=Wire.read()<<8|Wire.read();  
  AcZ=Wire.read()<<8|Wire.read();  
  int Y = map(AcY,-15000,15000,0,180);
  int X = map(AcX,-15000,15000,0,180);
  int value = analogRead(Flex);
  int A = map(value, 500, 1000, 0, 180);
  Serial.print("A");
  Serial.print(A);
  Serial.print("Y");
  Serial.print(Y);
  Serial.print("X");
  Serial.print(X);
  delay(100);
}


--------------------------------Code pour la carte Arduino Uno avec Bluetooth (Servomoteurs)------------------------------------------------------------

#include <Servo.h>
Servo myservo1;
Servo myservo2;
Servo myservo3; 
char data;
void setup(){
  Serial.begin(38400);
  myservo1.attach(9);
  myservo1.write(90);
  myservo2.attach(10);
  myservo2.write(0);
  myservo3.attach(11);
  myservo3.write(0);  
  }
void loop(){
   
    if (Serial.available()) {
      data=Serial.read();

      if (data=='A'){
        int valeur = Serial.parseInt();
        myservo1.write((1.8*valeur)-60);
       }

      if (data=='Y'){
        int valeur = Serial.parseInt();
        myservo2.write(valeur);
        }

     if (data=='X'){
        int valeur = Serial.parseInt();
        myservo3.write(180-valeur);
                
       }
     }
 }
 
 
 --------------------------------Code pour la carte Arduino Uno (Potentiom√®tres)------------------------------------------------------------
 
 
#include <Servo.h>

Servo servo1; 
Servo servo2;
Servo servo3;

void setup() {

  Serial.begin(9600);
  Serial.println("Initialisation : Check");
  
  
  //Setup Servo 1
  servo1.attach(9); 
  servo1.write(0);
  servo2.attach(10);
  servo2.write(0);
  servo3.attach(11);
  servo3.write(0);
  
}

void loop() {

  int v1 = analogRead(0);     
  servo1.write(map(v1, 0, 1023, 0, 180));   


  //Servo2
  int v2 = analogRead(1);    
  servo2.write(map(v2, 0, 1023, 0, 180)); 
  
  int v3 = analogRead(2);     
  servo3.write(map(v3, 0, 1023, 0, 180));   

}
